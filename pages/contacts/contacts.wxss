/* 整个页面的背景和基本样式 */
.container {
  padding: 16px;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  padding: 12px 0;
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #ffffff;
  border-radius: 8px;
  margin-bottom: 8px;  /* 每个联系人行的间距 */
}

.contact-name {
  font-size: 16px;
  color: #333;
}

.detail-button {
  font-size: 14px;
  color: #333;
  background-color: #e0e0e0; /* 浅灰色背景 */
  border: none;
  padding: 6px 12px;
  border-radius: 12px; /* 圆角按钮 */
}

/* 分隔线样式 */
.divider {
  height: 1px;
  width: 100%;
  background-color: #d3d3d3;
}

